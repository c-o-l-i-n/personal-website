{
  "name": "personal-website",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "ng build --stats-json",
    "build-and-serve-static-content": "npm run build && npm run scully && npm run scully:serve",
    "format": "prettier --write .",
    "postinstall": "patch-package",
    "lint": "ng lint",
    "lint-staged": "lint-staged",
    "new-post": "ng generate @scullyio/init:post --meta-data-file=content/blog/meta-data-template.yaml --target=content/blog --name",
    "ng": "ng",
    "scully": "scully --project personal-website",
    "scully:scan-routes": "scully --scanRoutes --project personal-website",
    "scully:serve": "scully serve --project personal-website",
    "scully:watch": "scully --watch --project personal-website",
    "start": "ng serve",
    "test": "ng test",
    "watch": "ng build --watch --configuration development"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "*.{ts,js,tsx,jsx,css,scss,sass,json,md,yml,yaml,html}": "prettier --write",
    "*.ts": "eslint --fix"
  },
  "dependencies": {
    "@angular/animations": "^17.0.2",
    "@angular/common": "^17.0.2",
    "@angular/compiler": "^17.0.2",
    "@angular/core": "^17.0.2",
    "@angular/forms": "^17.0.2",
    "@angular/platform-browser": "^17.0.2",
    "@angular/platform-browser-dynamic": "^17.0.2",
    "@angular/router": "^17.0.2",
    "@scullyio/init": "^2.1.41",
    "@scullyio/ng-lib": "^2.1.41",
    "@scullyio/scully": "^2.1.41",
    "@scullyio/scully-plugin-puppeteer": "^2.1.41",
    "patch-package": "^8.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular-eslint/builder": "17.0.1",
    "@angular-eslint/eslint-plugin": "17.0.1",
    "@angular-eslint/eslint-plugin-template": "17.0.1",
    "@angular-eslint/schematics": "17.0.1",
    "@angular-eslint/template-parser": "17.0.1",
    "@angular/cli": "^17.0.0",
    "@angular/compiler-cli": "^17.0.2",
    "@hirez_io/observer-spy": "^2.2.0",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.0",
    "postcss": "^8.4.31",
    "pre-commit": "^1.2.2",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "scully-plugin-disable-angular": "^8.0.0",
    "tailwindcss": "^3.3.3",
    "typescript": "~5.2.2"
  }
}
